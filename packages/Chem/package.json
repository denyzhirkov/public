{
  "name": "@datagrok/chem",
  "friendlyName": "Chem",
  "fullName": "Chem",
  "version": "1.0.3-detectors",
  "description": "Cheminformatics support: RDKit-based rendering, Molecule sketching, Feature based analysis",
  "repository": {
    "type": "git",
    "url": "https://github.com/datagrok-ai/public.git",
    "directory": "packages/Chem"
  },
  "properties": [
    {
      "name": "Renderer",
      "propertyType": "string",
      "choices": [
        "RDKit",
        "OpenChemLib"
      ],
      "defaultValue": "RDKit",
      "nullable": false
    }
  ],
  "sources": [
    "common/ngl_viewer/ngl.js"
  ],
  "dependencies": {
    "datagrok-api": "^1.4.0",
    "@datagrok-libraries/ml": "^2.0.1",
    "@datagrok-libraries/utils": "^0.4.1",
    "@types/wu": "latest",
    "cash-dom": "latest",
    "css-loader": "latest",
    "dayjs": "latest",
    "file-loader": "latest",
    "jstat": "^1.9.5",
    "offscreen-canvas": "latest",
    "openchemlib": "6.0.1",
    "path": "^0.12.7",
    "rxjs": "^6.5.5",
    "style-loader": "latest",
    "ts-loader": "latest",
    "typescript": "latest",
    "worker-loader": "latest",
    "wu": "latest"
  },
  "devDependencies": {
    "@types/offscreencanvas": "latest",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.1.0",
    "eslint-config-google": "^0.14.0",
    "path": "^0.12.7",
    "webpack": "latest",
    "webpack-cli": "latest",
    "workerloader-jest-transformer": "^0.0.5",
    "jest-html-reporter": "^3.5.0",
    "jest": "^27.0.0",
    "@types/jest": "^27.0.0",
    "ts-jest": "^27.0.0",
    "puppeteer": "^13.7.0"
  },
  "browser": {
    "fs": false,
    "path": false,
    "os": false,
    "crypto": false
  },
  "scripts": {
    "link-api": "npm link datagrok-api",
    "link-utils": "npm link @datagrok-libraries/utils",
    "link-ml": "npm link @datagrok-libraries/ml",
    "link-all": "npm install && npm link datagrok-api @datagrok-libraries/utils @datagrok-libraries/ml",
    "build-chem-local": "npm --prefix ./../../js-api run build && npm --prefix ./../../libraries/utils run build && npm --prefix ./../../libraries/ml run build && npm run build",
    "build": "webpack",
    "lint": "eslint \"./src/**/*.ts\"",
    "lint-fix": "eslint \"./src/**/*.ts\" --fix",
    "test": "set HOST=dev && jest",
    "test-dev": "set HOST=dev && jest",
    "test-local": "set HOST=localhost && jest"
  },
  "canEdit": [
    "Developers"
  ],
  "canView": [
    "All users"
  ],
  "category": "Cheminformatics"
}
