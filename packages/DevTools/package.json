    "type": "git",
    "url": "https://github.com/datagrok-ai/public.git",
    "directory": "packages/DevTools"
  },
  "dependencies": {
    "@datagrok-libraries/utils": "1.6.1",
    "codemirror": "^5.65.0",
    "datagrok-api": "^1.6.0",
    "js-yaml": "^4.1.0",
    "rxjs": "^6.5.5"
  },
  "devDependencies": {
    "@types/codemirror": "^5.60.5",
    "@types/jest": "^27.0.0",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "cash-dom": "^8.1.0",
    "css-loader": "^5.2.4",
    "eslint": "^8.21.0",
    "eslint-config-google": "^0.14.0",
    "jest": "^27.0.0",
    "jest-html-reporter": "^3.5.0",
    "puppeteer": "^13.7.0",
    "style-loader": "^2.0.0",
    "ts-jest": "^27.0.0",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.5",
    "webpack": "latest",
    "webpack-cli": "latest",
    "@types/js-yaml": "^4.0.5",
    "js-yaml": "^4.1.0",
    "@types/node-fetch": "^2.6.2",
    "node-fetch": "^2.6.7"
  },
  "scripts": {
    "link-api": "npm link datagrok-api",
    "debug-dev-tools": "grok publish",
    "release-dev-tools": "grok publish --release",
    "build-dev-tools": "webpack",
    "build": "webpack",
    "lint": "eslint src --ext .ts",
    "lint-fix": "eslint src --ext .ts --fix",
    "debug-dev-tools-public": "grok publish public",
    "release-dev-tools-public": "grok publish public --release",
    "debug-dev-tools-local": "grok publish local",
    "release-dev-tools-local": "grok publish local --release",
    "release-local": "grok publish local --release",
    "debug-local": "grok publish local",
    "test": "jest",
    "test-dev": "set HOST=dev && jest",
    "test-local": "set HOST=localhost && jest"
  },
  "sources": [
    "common/codemirror/codemirror.js",
    "common/codemirror/codemirror.css"
  ],
  "canEdit": [
    "Developers"
  ],
